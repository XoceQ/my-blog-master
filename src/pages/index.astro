---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// Lista de posts (puedes cargar esta lista desde un archivo o base de datos)
const posts = [
  {
    href: '/blog/first-post',
    title: 'Navigating the Digital Age',
    body: 'Critical Thinking and Media Literacy: Navigating the Digital Age'
  },
  {
    href: '/blog/second-post',
    title: 'The Evolution of Justice',
    body: 'Crime and Punishment: The Evolution of Justice'
  },
  // Agrega más posts aquí
];
---

<Layout title="Welcome to My Blog">
  <main>
    <h1>José Revelo Benítez</h1>
    <h2>Backend Developer</h2>

    <!-- Agregamos el botón de GitHub aquí -->
    <a href="https://github.com/XoceQ" target="_blank" class="github-button">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="bi bi-github" width="24" height="24">
        <path d="M8 0a8 8 0 0 0-2.527 15.592c.4.074.527-.173.527-.384 0-.191-.007-.698-.011-1.368-2.147.472-2.607-.547-2.607-.547-.35-.888-.855-1.124-.855-1.124-.693-.472-.042-.463.047-.463.77.054 1.17.786 1.17.786.684 1.172 1.798.834 2.226.638.07-.497.266-.834.484-1.023-1.696-.192-3.47-.848-3.47-3.776 0-.833.297-1.519.785-2.049-.079-.193-.339-.978.074-2.037 0 0 .64-.205 2.099.785.61-.169 1.264-.253 1.91-.256.645.003 1.3.087 1.91.256 1.46-.99 2.1-.785 2.1-.785.413 1.059.154 1.844.075 2.037.49.53.785 1.216.785 2.049 0 2.938-1.776 3.584-3.474 3.776.27.228.508.676.508 1.365 0 .993-.011 1.792-.011 2.037 0 .213.126.462.531.384A8 8 0 0 0 8 0z"/>
      </svg>
      <span>Follow me on GitHub</span>
    </a>

    <h3>Latest Posts</h3>
    <div class="card-grid">
      {posts.map(post => (
        <Card href={post.href} title={post.title} body={post.body} />
      ))}
    </div>
  </main>
</Layout>

<script type="module" src="/scripts/carousel.js"></script>

<style>
  :root {
    --primary-color: #fff;
    --background-color: #13151a;
    --accent-color: #f33939;
    --accent-light: #a1a099;
    --accent-dark: #310a65;
    --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  main {
    margin: auto;
    padding: 1rem;
    width: 90%;
    max-width: 1000px;
    color: var(--primary-color);
    font-family: var(--font-family);
    font-size: 1.125rem;
    line-height: 1.6;
    background: var(--background-color);
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    color: var(--accent-color);
    margin-bottom: 1em;
  }

  h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--accent-light);
    margin-bottom: 1em;
    text-align: left;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Tres columnas */
    gap: 1rem; /* Espaciado entre tarjetas */
  }

  .card {
    background: var(--background-color);
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1); /* Efecto de sombra 3D */
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease; /* Transiciones suaves */
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.3), transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card:hover {
    transform: translateY(-10px) scale(1.05) rotate(1deg);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2), 0 20px 40px rgba(0, 0, 0, 0.15);
    background: linear-gradient(145deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.1));
  }

  .card:hover::before {
    opacity: 1;
  }

  .github-button {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    background-color: #24292f;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-size: 1.125rem;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .github-button:hover {
    background-color: #2c3238;
    transform: translateY(-10px) rotate(3deg) scale(1.1);
  }

  .github-button:active {
    transform: translateY(3px);
  }

  .github-button span {
    font-weight: 600;
    margin-left: 10px;
  }

  .github-button svg {
    width: 24px;
    height: 24px;
    fill: white;
    transition: transform 0.3s ease;
  }

  .github-button:hover svg {
    transform: rotate(360deg);
  }
</style>

---
import Layout from '../../layouts/Layout.astro';

export const frontmatter = {
  title: 'The Evolution of Justice',
  description: 'Crime and Punishment: The Evolution of Justice',
  date: '2024-08-13',
};
---

<Layout title={frontmatter.title}>
  <main>
    
  </main>
</Layout>

<style>
  :root {
    --background-color: #f5f5f5;
    --text-color: #333;
    --accent-color: #007acc;
    --header-font: 'Arial', sans-serif;
    --body-font: 'Georgia', serif;
  }

  main {
    padding: 2rem;
    max-width: 800px;
    margin: auto;
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: var(--body-font);
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-family: var(--header-font);
    color: var(--accent-color);
    margin-bottom: 0.5rem;
  }

  .date {
    font-size: 1rem;
    color: var(--text-color);
    margin-bottom: 0.5rem;
  }

  .description {
    font-size: 1.125rem;
    color: var(--accent-color);
    margin-bottom: 2rem;
  }

  .content p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #000;
    margin-top: 1.5rem;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .description {
      font-size: 1rem;
    }

    .content p {
      font-size: 0.875rem;
    }
  }
</style>
